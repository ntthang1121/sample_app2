<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("global.header.sample_app"), "#", id: "logo" %>>
    <nav class="nav navbar-nav navbar-right">
      <ul class="nav navbar-nav navbar-right">
        <li class="nav-item"><%= link_to t("global.header.home"), "#" %></li>
        <li class="nav-item"><%= link_to t("global.header.help"), static_pages_help_path %></li>

        <% if logged_in? %>
          <li><%= link_to t("users"), users_path %></li>
          <li class="dropdown">
            <%= link_to "#", class: "btn btn-secondary dropdown-toggle", "data-toggle"=>"dropdown" do %>
              <%= t "dropdown.account" %>
              <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu">
              <li><%= link_to t("dropdown.profile"), current_user %></li>
              <li><%= link_to t("dropdown.setting"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li><%= link_to t("dropdown.logout"), logout_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("global.header.login"), login_path %></li>
        <% end %>
      </ul>
      <ul>
        <li><%= link_to t("global.header.option_en"), locale: :en %></li>
        <li><%= link_to t("global.header.option_vi"), locale: :vi %></li>
      </ul>
    </nav>
  </div>
</header>
