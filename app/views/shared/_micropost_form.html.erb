<%= form_for @micropost do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: t("page_micropost_form.placeholder") %>
  </div>
  <%= f.submit t("page_micropost_form.submit"), class: "btn btn-primary" %>
  <span class="image">
    <%= f.file_field :image, accept: "image/jpeg, image/gif, image/png" %>
  </span>
<% end %>
<%= javascript_pack_tag "custom" %>
