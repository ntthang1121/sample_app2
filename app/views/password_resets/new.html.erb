<% provide :title, t("page_new_password.title") %>
<h1><%= t "page_new_password.welcome" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :password_reset, url: password_resets_path do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>
      <%= f.submit t("page_new_password.submit"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
